{
  "name": "use-font-from-content",
  "version": "1.0.0",
  "description": "React hook to scan your web page, and generate Google font for only used characters. Especially useful for Japanese and other fonts that contain a lot of characters.",
  "author": "<adam.butterfield@ymail.com>",
  "license": "MIT",
  "main": "dist/use-font-from-content.js",
  "module": "dist/use-font-from-content.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "homepage": "https://github.com/adbutterfield/use-font-from-content",
  "repository": {
    "type": "git",
    "url": "https://github.com/adbutterfield/use-font-from-content"
  },
  "bugs": {
    "url": "https://github.com/adbutterfield/use-font-from-content/issues"
  },
  "unpkg": "dist/use-font-from-content.umd.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:modern && npm run build:min && npm run copyfiles",
    "build:modern": "rollup -c",
    "build:min": "rollup -c rollup.min.config.js",
    "bundlesize": "yarn build:min && bundlesize",
    "clean": "rm -rf dist",
    "copyfiles": "copyfiles -f src/types.d.ts dist",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint --ext .ts,.tsx ./src",
    "format": "prettier --write \"src/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "test": "jest --config jest.config.js",
    "preversion": "npm run lint && npm run coverage",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "google fonts",
    "character set",
    "japanese fonts",
    "react-hooks",
    "react"
  ],
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/pluginutils": "^5.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "bundlesize": "^0.18.1",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.26.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/use-font-from-content.min.es.js",
      "maxSize": "5 kB"
    }
  ],
  "dependencies": {
    "@babel/eslint-parser": "^7.22.7",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2"
  }
}
